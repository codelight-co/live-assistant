datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  ADMIN
  CLIENT
}

enum UserStatus {
  ACTIVE
  INACTIVE
}

model User {
  id    String     @default(uuid()) @id
  createdAt DateTime @default(now())
  email String  @unique
  password  String
  firstName String
  lastName String
  phone String?
  role UserRole @default(CLIENT)
  status UserStatus @default(ACTIVE)
  agent Agent?
}

model Agent {
  id String     @default(uuid()) @id
  createdAt DateTime @default(now())
  companyName     String
  user    User   @relation(fields: [userId], references: [id])
  userId  String @unique
}
